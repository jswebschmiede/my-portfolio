---
import { Image } from "astro:assets";
import Layout from "@/layouts/PageLayout.astro";

import Button from "@/components/ui/Button.astro";
import manatwork from "@/assets/manatwork.svg";
import Container from "@/components/ui/Container.astro";
import ManAtWork from "@/components/ui/ManAtWork.astro";

const meta = {
  title: "Jörg Schöneburg - Full-Stack Entwickler in Altenburg | Erfahrung & Leidenschaft",

  description:
    "Erfahren Sie mehr über Jörg Schöneburg, einen leidenschaftlichen Full-Stack Entwickler aus Altenburg mit umfangreicher Expertise. Entdecken Sie maßgeschneiderte Web-Lösungen für Ihr Projekt",
};
---

<Layout {meta}>
  <article class="reveal-fx">
    <Container>
      <div class="col-span-5 text-center md:text-left">
        <h1 class="pb-5 text-3xl xs:text-6xl lg:text-7xl">Jörg <br /> Schöneburg</h1>
        <h2 class="pb-12 text-xl xs:text-2xl lg:text-3xl font-normal">
          Full-Stack Entwickler aus Altenburg</h2
        >
        <div class="flex items-center gap-9">
          <Button
            href="/profil-joerg-schoeneburg.pdf"
            target="_blank"
            download="profil-joerg-schoeneburg"
            title="Profil herunterladen"
          >
            Profil
          </Button>
          <Button variant={"secondary"} href="/ueber-mich#skills">Meine Skills</Button>
        </div>
      </div>
      <div class="col-span-7">
        <ManAtWork />
      </div>
    </Container>
  </article>
</Layout>
