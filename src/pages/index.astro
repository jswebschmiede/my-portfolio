---
import { Image } from '@astrojs/image/components';
import Layout from '@/layouts/PageLayout.astro';

import manatwork from '@/assets/manatwork.svg';
import Button from '@/components/ui/Button.astro';

const meta = {
    title: 'Home',
    description: 'Home page description'
};
---

<Layout {meta}>
    <article>
        <div
            class='container grid max-w-6xl items-center gap-12 py-32 lg:grid-cols-12'>
            <div class='lg:col-span-5'>
                <h1 class='pb-5'>Jörg <br /> Schöneburg</h1>
                <h2 class='pb-12 text-3xl font-normal'>
                    Web Developer aus Altenburg
                </h2>
                <div class='flex items-center gap-9'>
                    <Button
                        href='#'
                        title='Profil herunterladen'>
                        Profil
                    </Button>
                    <Button
                        variant={'secondary'}
                        href='/ueber-mich.html#skills'>
                        Meine Skills
                    </Button>
                </div>
            </div>
            <div class='lg:col-span-7'>
                <Image
                    class='tilt w-full'
                    src={manatwork}
                    alt='Man at Work'
                />
            </div>
        </div>
    </article>
</Layout>
