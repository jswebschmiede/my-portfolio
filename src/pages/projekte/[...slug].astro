---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import { Image } from 'astro:assets';

import Layout from '@/layouts/PageLayout.astro';
import Button from '@/components/ui/Button.astro';

interface Props {
    project: CollectionEntry<'projects'>;
}

// 1. Generate a new path for every collection entry
export async function getStaticPaths() {
    const allProjects = await getCollection('projects');
    return allProjects.map((project) => ({
        params: { slug: project.slug },
        props: { project }
    }));
}
// 2. When it's time to render, you can get the entry directly from the prop
const { project } = Astro.props;
const { Content } = await project.render();

const meta = {
    title: project.data.title,
    description: project.data.description
};
---

<Layout {meta}>
    <div class='container max-w-7xl py-32'>
        <Image
            src={project.data.image.src}
            width={1600}
            height={675}
            alt={project.data.image.alt}
            aspectRatio='16:9'
            class='border-2 reveal-fx'
            format='webp'
        />

        <div class='container max-w-6xl reveal-fx'>
            <div class='flex gap-4 pt-5 pb-12'>
                {
                    project.data.tags.map((tag: string) => (
                        <Button
                            href={`/tags/${tag.toLowerCase()}`}
                            classAppend={'max-h-10'}>
                            #{tag}
                        </Button>
                    ))
                }
            </div>
            <h1 class='pb-6'>{project.data.title}</h1>

            <div class='prose max-w-none prose-h2:mt-20 prose-h2:text-6xl'>
                <Content />
            </div>
        </div>
    </div>
</Layout>
