---
import { Image } from "astro:assets";
import Header from "@/components/ui/Header/Header.astro";
import Footer from "@/components/ui/Footer.astro";
import Layout from "@/layouts/BaseLayout.astro";

import star from "@/assets/star.svg";
import ellip from "@/assets/ellip.svg";
import MouseFollow from "@/components/ui/MouseFollow.astro";

const { meta } = Astro.props;
---

<Layout {meta}>
  <div class="site relative">
    <Image
      class="absolute right-0 top-1/3 scroll-fx js-scroll-fx -z-[1] hidden xl:block"
      src={star as any}
      data-scroll-fx="translateY, 100px, -100px, 0%, 100%"
      alt=""
      aria-hidden="true"
    />
    <Image
      class="absolute w-16 xl:w-auto bottom-44 md:bottom-1/4 left-0 scroll-fx js-scroll-fx -z-[1]"
      src={ellip as any}
      data-scroll-fx="translateY, 100px, -200px, 0%, 100%"
      alt=""
      aria-hidden="true"
    />

    <slot name="header">
      <Header />
    </slot>

    <main class="site-content" id="swup">
      <slot />
    </main>

    <slot name="footer">
      <Footer />
    </slot>

    <MouseFollow />
  </div>
</Layout>
