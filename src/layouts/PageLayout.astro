---
import { Image } from '@astrojs/image/components';
import Header from '@/components/ui/Header.astro';
import Footer from '@/components/ui/Footer.astro';
import Layout from '@/layouts/BaseLayout.astro';

import star from '@/assets/star.svg';
import ellip from '@/assets/ellip.svg';

const { meta } = Astro.props;
---

<Layout {meta}>
    <div class='site relative'>
        <Image
            class='absolute right-0 top-1/3 scroll-fx js-scroll-fx'
            src={star}
            data-scroll-fx='translateY, 100px, -100px, 0%, 100%'
            alt=''
            aria-hidden='true'
        />
        <Image
            class='absolute bottom-1/4 left-0 scroll-fx js-scroll-fx'
            src={ellip}
            data-scroll-fx='translateY, 100px, -200px, 0%, 100%'
            alt=''
            aria-hidden='true'
        />

        <slot name='header'>
            <Header />
        </slot>

        <main
            class='site-content'
            id='swup'>
            <slot />
        </main>

        <slot name='footer'>
            <Footer />
        </slot>
    </div>
</Layout>
