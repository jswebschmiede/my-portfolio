---
import MetaTags from '@/components/MetaTags.astro';
import { SITE } from '@/config';
import type { MetaSEO } from '@/types';
import '@fontsource/poppins/300.css';
import '@fontsource/poppins/400.css';
import '@fontsource/poppins/600.css';
import '@fontsource/poppins/700.css';

export interface Props {
    meta?: MetaSEO;
}

const { meta = {} } = Astro.props;
const { language = 'en', textDirection = 'ltr' } = SITE;
---

<!DOCTYPE html>
<html
    lang={language}
    dir={textDirection}
    class='2xl:text-[20px] bg-bg-page text-text-page antialiased'>
    <head>
        <MetaTags {...meta} />
    </head>
    <body>
        <slot />
        <style is:global>
            :root {
                --font-sans: 'Poppins', sans-serif;
                --font-serif: var(--font-sans);
                --font-heading: var(--font-sans);

                --color-primary: rgb(30 64 175);
                --color-secondary: rgb(30 58 138);
                --color-accent: rgb(109 40 217);
                --color-text-page: rgb(17 24 39);
                --color-text-muted: rgb(75 85 99);
                --color-bg-page: rgb(255 255 255);
            }
        </style>
    </body>
</html>
