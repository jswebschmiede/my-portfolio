---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
import Button from "../ui/Button.astro";

interface Props {
  project: CollectionEntry<"projects">;
}

const { project } = Astro.props;
---

<article class="col-span-12 md:col-span-6 w-full">
  <div
    class="border-2 bg-whitegreen-100 p-4 sm:p-10 dark:bg-black-500 shadow-custom dark:shadow-custom-d tilt md:min-h-[490px] will-change-transform"
  >
    <a class="block" href={`/projekte/${project.slug}`}>
      <Image
        src={project.data.image as ImageMetadata}
        width={450}
        height={450 / 1.5}
        alt={project.data.image_alt}
        class="mb-10 border-2 w-full md:w-auto"
        format="webp"
      />
    </a>
    <!-- <p class="mb-1 text-sm font-bold text-orange-500">
      <span class="mr-2">
        {project.data.tags.join(", ")}
      </span>
    </p> -->
    <h3 class="mt-0 mb-5 text-2xl xs:text-4xl md:text-5xl font-black">
      {project.data.title}
    </h3>
    <Button
      classAppend="text-xs xs:text-base"
      href={`/projekte/${project.slug}`}
      variant="secondary"
    >
      Projekt anzeigen
    </Button>
  </div>
</article>
