---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import Button from '../ui/Button.astro';

interface Props {
    project: CollectionEntry<'projects'>;
}

const { project } = Astro.props;
---

<article class='col-span-12 reveal-fx'>
    <div
        class='grid grid-cols-12 items-center border-2 bg-whitegreen-100 shadow-custom tilt will-change-transform'>
        <div class='col-span-7 p-10'>
            <Image
                src={project.data.image as ImageMetadata}
                width={618}
                height={618 / 1.5}
                alt={project.data.image_alt}
                class='border-2'
                format={'webp'}
            />
        </div>

        <div class='prose col-span-5 p-6'>
            <p class='mb-1 text-sm font-bold text-orange-500'>
                <span class='mr-2'> Vorgestelltes Projekt</span>
            </p>
            <h3 class='mt-0 mb-5 text-5xl font-black'>
                {project.data.title}
            </h3>
            <p>{project.data.description}</p>
            <Button
                href={`/projekte/${project.slug}`}
                variant='secondary'>
                Projekt anzeigen
            </Button>
        </div>
    </div>
</article>
