---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
import Button from "../ui/Button.astro";

interface Props {
  project: CollectionEntry<"projects">;
}

const { project } = Astro.props;
---

<article class="col-span-12">
  <div
    class="md:grid grid-cols-12 p-4 sm:p-10 gap-10 items-center border-2 bg-whitegreen-100 dark:bg-black-500 shadow-custom dark:shadow-custom-d tilt will-change-transform"
  >
    <div class="col-span-7">
      <a class="block" href={`/projekte/${project.slug}`}>
        <Image
          src={project.data.thumbnail as ImageMetadata}
          width={750}
          height={750 / 1.5}
          alt={project.data.image_alt}
          class="mb-10 md:mb-0 border-2 w-full md:w-auto"
          format={"webp"}
        />
      </a>
    </div>

    <div class="prose dark:prose-dark dark:prose-a:text-whitegreen-500 col-span-5">
      <!-- <p class="mb-1 text-sm font-bold text-orange-500">
        <span class="mr-2"> Vorgestelltes Projekt</span>
      </p> -->
      <h3 class="mt-0 mb-5 text-2xl xs:text-4xl md:text-5xl font-black hyphens-auto break-words">
        {project.data.title}
      </h3>
      <p class="hidden md:block">{project.data.description}</p>
      <Button
        classAppend="text-xs xs:text-base"
        href={`/projekte/${project.slug}`}
        variant="secondary"
      >
        Projekt anzeigen
      </Button>
    </div>
  </div>
</article>
