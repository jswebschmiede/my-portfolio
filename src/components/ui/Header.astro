---
import { Image } from 'astro:assets';
import rectangle from '@/assets/rectangle.svg';
import NavBar from './NavBar.astro';
---

<header
    id='masthead'
    class='main-header z-1 relative z-10 flex w-full items-center justify-between pt-14'>
    <div
        class='container relative hidden w-full max-w-6xl items-center justify-between lg:flex'>
        <Image src={rectangle}
            class='absolute -top-14 left-80 -z-[1]'
            alt=''
            aria-hidden='true'
        />
        <NavBar />
    </div>
</header>
