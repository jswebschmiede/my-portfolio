---
interface Props {
    title: string;
    date: string;
    company?: string;
}

const { title, date, company } = Astro.props;
---

<li class='pl-16 relative pb-16 last-of-type:pb-4'>
    <span
        class='w-[30px] h-[30px] inline-block rounded-full bg-orange-500 shadow-custom absolute left-0 -top-[1px] z-[1]'
    ></span>
    <h4 class='text-2xl'>
        {title}
        {company && <span class='text-orange-500'>@{company}</span>}
    </h4>
    <p class='font-bold italic'>{date}</p>
    <div class='pt-6'>
        <slot />
    </div>
</li>
